{
  "name": "fluxer-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bunx tsc",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:deploy": "bunx prisma migrate deploy",
    "db:studio": "bunx prisma studio",
    "db:reset": "bunx prisma migrate reset --force --skip-seed",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "prepare": "bun -e \"if (process.env.CI||process.env.NODE_ENV==='production') process.exit(0); const p=Bun.spawn(['husky'],{stdout:'inherit',stderr:'inherit'}); await p.exited; process.exit(p.exitCode??1);\""
  },
  "dependencies": {
    "@discordjs/core": "^2.4.0",
    "@discordjs/rest": "^2.6.0",
    "@discordjs/ws": "2.0.3",
    "@prisma/client": "^6.5.0",
    "dotenv": "^16.4.7",
    "prisma": "^6.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.9",
    "discord-api-types": "^0.37.102",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
  }
}
